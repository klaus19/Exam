                    android:layout_height="wrap_content"
                    android:text="A)Sunday
"
                    android:id="@+id/radioButton1Calender"></RadioButton>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton2Calender"
                    android:text="B)Saturday"></RadioButton>
                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/radioButton3Calender"
