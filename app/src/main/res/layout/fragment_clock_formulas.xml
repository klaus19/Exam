<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quantitative.fragments.ClockFormulas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayoutProfit">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/nestProfitFormula">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/txtPercentage"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Minute Spaces"
                    android:textStyle="bold"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/txtConceptPercentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The face or dial of watch is a circle whose circumference is divided into 60 equal parts, called minute spaces."
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtPercentage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>

                <TextView
                    android:id="@+id/txtPercentageIncreaseDecrease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtConceptPercentage"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:gravity="center_horizontal"
                    android:text="Hour Hand and Minute Hand:"
                    android:textStyle="bold"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:id="@+id/txtConceptPercentageIncrease"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A clock has two hands, the smaller one is called the hour hand or short hand while the larger one is called minute hand or long hand.
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtPercentageIncreaseDecrease"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>

                <TextView
                    android:id="@+id/txtResultsonPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In 60 minutes, the minute hand gains 55 minutes on the hour on the hour hand."
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/txtConceptPercentageIncrease"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtPopulation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="In every hour, both the hands coincide once.
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtResultsonPopulation"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtResultsonDeprection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The hands are in the same straight line when they are coincident or opposite to each other."
                    android:gravity="center_horizontal"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:layout_below="@id/txtPopulation"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtPopulationDeprection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When the two hands are at right angles, they are 15 minute spaces apart.
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtResultsonDeprection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtPopula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When the hands are in opposite directions, they are 30 minute spaces apart
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtPopulationDeprection"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Angle traced by hour hand in 12 hrs = 360°
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtPopula"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtBop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Angle traced by minute hand in 60 min. = 360°.
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtTop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>
                <TextView
                    android:id="@+id/txtPop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If a watch or a clock indicates 8.15, when the correct time is 8, it is said to be 15 minutes too fast.
                             On the other hand, if it indicates 7.45, when the correct time is 8, it is said to be 15 minutes too slow.
"
                    android:gravity="center_horizontal"
                    android:layout_below="@id/txtBop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:textSize="20sp"
                    ></TextView>

            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>


</FrameLayout>